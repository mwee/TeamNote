<li>
  <span class="content"><%= note.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(note.created_at) %> ago.
  </span>
  <% if correct_user?(note.user) or current_user?(note.user) %>
  	<%= link_to 'show', note %> 
  	<%= link_to 'edit', edit_note_path(note) %>
    <%= link_to "delete", note, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: note.content %>
  <% end %>
</li>

