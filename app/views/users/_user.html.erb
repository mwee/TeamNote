<li>
  <%= gravatar_for user, size: 52 %>
  <%= link_to user.name, user %>

  <% unless current_user?(user) %>
  <div id="share_form">
  <% if current_user.sharing?(user) %>
    <%= render partial: 'unshare' , locals: { user: user } %>
  <% else %>
    <%= render partial: 'share' , locals: { user: user } %>
  <% end %>
  </div>
  <% end %>

</li>